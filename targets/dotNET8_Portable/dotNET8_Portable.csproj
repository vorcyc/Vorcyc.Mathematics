<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <BaseOutputPath>..\..\bin\</BaseOutputPath>
    <GenerateDocumentationFile>True</GenerateDocumentationFile>
    <AllowUnsafeBlocks>True</AllowUnsafeBlocks>
    <AssemblyName>Vorcyc.Mathematics</AssemblyName>
    <RootNamespace>Vorcyc.Mathematics</RootNamespace>
    <Authors>cyclone_dll ( linliduan )</Authors>
    <Company>Vorcyc</Company>
    <Description>A pure dotNET and high performance math library.</Description>
    <Copyright>Vorcyc® Mathematics</Copyright>
    <Version>0.2.10.0</Version>
    <AssemblyVersion>0.2.10.0</AssemblyVersion>
    <Title>Vorcy.Mathematics</Title>
    <PackageIcon>logo1.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageTags>.NET Math Statistics DSP LinearAlgebra Numerics ArrayEx Generic-Math misc</PackageTags>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageLicenseFile>License.txt</PackageLicenseFile>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\docs\License.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\docs\logos\logo1.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\docs\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="ILGPU" Version="1.5.1" />
    <PackageReference Include="ILGPU.Algorithms" Version="1.5.1" />
    <PackageReference Include="System.Numerics.Tensors" Version="8.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Update="License.txt">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <Import Project="..\..\shared projects\ComputingContext\ComputingContext.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\Core\Core.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\LinearAlgebra\LinearAlgebra.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\Numerics\Numerics.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\SignalProcessing\SignalProcessing.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\Statistics\Statistics.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\Experimental\Experimental.projitems" Label="Shared" />

  <Import Project="..\..\shared projects\MachineLearning\MachineLearning.projitems" Label="Shared" />

</Project>
